<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <bean id="datasource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://119.29.163.251:3306/resumesys?useSSL=false"/>
        <property name="username" value="resumeroot"/>
        <property name="password" value="helloworld"/>
    </bean>
    <bean id="userDaoImp" class="com.resumeweb.DAO.UserDaoImp">
        <property name="dataSource" ref="datasource"/>
    </bean>
    <bean id="base_infoDaoImp" class="com.resumeweb.DAO.base_infoDaoImp">
        <property name="dataSource" ref="datasource"/>
    </bean>
    <bean id="edu_infoDaoImp" class="com.resumeweb.DAO.edu_infoDaoImp">
        <property name="dataSource" ref="datasource"/>
    </bean>
    <bean id="project_infoDaoImp" class="com.resumeweb.DAO.project_infoDaoImp">
        <property name="dataSource" ref="datasource"/>
    </bean>
    <bean id="resume_projectsImp" class="com.resumeweb.DAO.project_infoDaoImp">
        <property name="dataSource" ref="datasource"/>
    </bean>
    <bean id="resumeDaoImp" class="com.resumeweb.DAO.resumeDaoImp">
        <property name="dataSource" ref="datasource"/>
    </bean>
    <bean id="resume_edusImp" class="com.resumeweb.DAO.resume_edusImp">
        <property name="dataSource" ref="datasource"/>
    </bean>
    <bean id="LogAndRegisterService" class="com.resumeweb.service.LogAndRegisterService">
        <property name="userDao" ref="userDaoImp"/>
    </bean>


</beans>